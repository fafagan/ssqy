<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="110dp">
    <!--
    item_lv_pic_course
    -->
    <ImageView
        android:layout_marginRight="15dp"
        android:id="@+id/imgv_item_lv_pic_course"
        android:layout_centerVertical="true"
        android:src="@drawable/item_pic"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <!--android:layout_toLeftOf="@+id/imgv_learned_item_lv_pic_course"-->
    <TextView
     
        android:id="@+id/tv_title_item_lv_pic_course"
        android:textColor="@color/text_common_default"
        android:textSize="16sp"
        android:ellipsize="end"
        android:lines="2"
        android:text="xxxx"
        android:layout_toRightOf="@+id/imgv_item_lv_pic_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!-- android:layout_toLeftOf="@+id/imgv_learned_item_lv_pic_course"-->
    <TextView
       
        android:layout_below="@+id/tv_title_item_lv_pic_course"
        android:id="@+id/tv_learned_item_lv_pic_course"
        android:textColor="@color/text_common_default"
        android:textSize="12sp"
        android:ellipsize="end"
        android:text="xxx"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/imgv_item_lv_pic_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/layout_course_learned"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="-10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/item_learned"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
          
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textColor="#156b43"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:text="您已看完该养生图文"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>