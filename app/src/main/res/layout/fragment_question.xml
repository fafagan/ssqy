<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.medicine.ssqy.ssqy.ui.fragment.QuestionFragment">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_question_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<ProgressBar-->
            <!--android:id="@+id/progressBar"-->
            <!--style="?android:attr/progressBarStyleHorizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="25dp"/>-->

        <WebView
            android:layout_below="@+id/progressBar"
            android:id="@+id/wv_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>
    </RelativeLayout>
    <com.medicine.ssqy.ssqy.ui.views.LayoutRootCommon
        android:id="@+id/layout_welcome_question"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <TextView
            android:layout_marginTop="90dp"
            android:id="@+id/tv_app_introduce"
            android:textSize="18sp"
            android:textColor="#000"
            android:lineSpacingExtra="3dp"
            android:layout_marginBottom="20dp"
            android:text="@string/app_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/tv_app_introduce"
            android:textColor="@color/text_color_red"
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_question_welcome"
            android:text="@string/question_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_below="@+id/tv_question_welcome"
            android:layout_marginTop="25dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/shape_first_login_bt"
            android:id="@+id/bt_begin_question"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我已经了解，开始填写"/>
        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/imgv_logo1"
            android:layout_alignParentBottom="true"
            android:src="@drawable/logo_dzm"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        <ImageView
            android:layout_marginTop="-25dp"
            android:id="@+id/imgv_logo2"
            android:layout_alignParentRight="true"
            android:src="@drawable/logo_kpzx"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
        
    </com.medicine.ssqy.ssqy.ui.views.LayoutRootCommon>

</RelativeLayout>
