<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="20dp"
              android:background="@drawable/bg_jc2"
              android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:text="请选择课程类型"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/text_color_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        
        android:background="@color/text_color_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:clickable="true"
           android:orientation="vertical"
           android:id="@+id/layout_dig_course_vedio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_gravity="center_horizontal"
               android:src="@drawable/pic_vedio"
               android:layout_width="70dp"
               android:layout_height="70dp"/>
           <TextView
               android:textSize="12sp"
               android:textColor="@color/text_common_default"
               android:text="全部视频课程"
               android:layout_width="100dp"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"/>
       </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_dig_course_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pic_audio"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_common_default"
                android:text="全部音频课程"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:orientation="vertical"
            android:id="@+id/layout_dig_course_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pic_tw"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_common_default"
                android:text="全部图文课程"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>