<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    

<LinearLayout
    android:background="@drawable/bg_home"
    android:orientation="vertical"
    android:id="@+id/activity_app_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.medicine.ssqy.ssqy.ui.activity.AppInformationActivity">
  
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_marginBottom="30dp"
      android:layout_height="wrap_content">
      
      <ImageView
          android:layout_gravity="center_horizontal"
          android:background="@drawable/bagua"
          android:scaleType="fitXY"
          android:layout_width="match_parent"
          android:layout_height="300dp"/>
      <ImageView
          android:src="@drawable/meihua6"
          android:scaleType="fitXY"
          android:layout_width="200dp"
          android:layout_height="200dp"/>
  </RelativeLayout>

    <TextView
        android:padding="10dp"
        android:lineSpacingMultiplier="1.4"
        android:textSize="16sp"
        android:textColor="@color/text_color_red"
        android:textStyle="bold"
        android:text="@string/xsbj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/title_index"
            android:layout_width="70dp"
            android:layout_height="150dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_red"
            android:textStyle="bold"
            android:text="东直门医院健康管理中心"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>