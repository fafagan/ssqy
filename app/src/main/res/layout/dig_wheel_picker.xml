<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="330dp"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_title_dig_wheel_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/text_common_default"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"/>

    <com.wx.wheelview.widget.WheelView
        android:layout_below="@+id/tv_title_dig_wheel_picker"
        android:id="@+id/wheelView_dig_wheel_picker"
        android:layout_width="200dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    
    <LinearLayout
        android:layout_below="@+id/wheelView_dig_wheel_picker"
        android:layout_centerHorizontal="true" 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_cancel_dig_wheel_picker"
            android:text="取消"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/bt_confirm_dig_wheel_picker"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>
