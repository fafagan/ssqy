<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efefef"
              android:orientation="vertical"
              android:paddingBottom="60dp"
              android:paddingLeft="@dimen/padding_first_login_left"
              android:paddingRight="@dimen/padding_first_login_left"
              android:paddingTop="@dimen/padding_first_login_top"
              tools:context="com.medicine.ssqy.ssqy.ui.fragment.FirstLoginSexFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="出生年月"
        android:textColor="@color/text_common_default"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_birth_first_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="1980年1月1日"
        android:textColor="@color/text_color_red"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年"
                android:textColor="@color/text_common_default"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/text_common_default"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/text_common_default"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/wv_year_first_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_mengban_top"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_mengban_bottom"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/wv_month_first_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_mengban_top"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_mengban_bottom"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.wx.wheelview.widget.WheelView
                    android:id="@+id/wv_day_first_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_mengban_top"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_mengban_bottom"/>
            </FrameLayout>


        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_first_login_bt"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="16sp"/>
</LinearLayout>
