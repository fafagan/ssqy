<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8000"
                android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_back_pop_dk"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/content_dig_dk"
        android:layout_marginRight="30dp"
        android:background="@drawable/pop_la"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:ellipsize="start"
            android:gravity="center"
            android:singleLine="true"
            android:text="收 回"
            android:textColor="@color/text_color_red"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/content_dig_dk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dig_dk_main_height"
        android:background="@drawable/bg_jc2"
        android:orientation="vertical"
        android:padding="@dimen/padding_dk_root"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="已连续吃药打卡"
            android:textColor="@color/text_common_default"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <FrameLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_tv"
            android:layout_below="@+id/tv"
            android:layout_width="160dp"
            android:layout_height="@dimen/height_pop_dk_back"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_pop_dk">

            <TextView
                android:id="@+id/tv_days_dk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="17dp"
                android:ellipsize="start"
                android:gravity="center"
                android:singleLine="true"
                android:text="2 天"
                android:textColor="@color/text_common_default"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_dk_today"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/tv_dk_futrue_selector"
            android:clickable="true"
            android:text="今 天"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_tv"
            android:textColor="@color/text_color_red"
            android:textSize="14sp"/>
        <RelativeLayout
            android:id="@+id/layout_success"
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_dk_today"
            android:layout_alignBottom="@+id/tv_dk_today"
            android:background="@drawable/ease_chatfrom_bg_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="20dp"
                android:id="@+id/tv_wc"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_red"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="今天已打卡！"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/zan"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/tv_wc"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dk_day1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>

            <TextView
                android:id="@+id/tv_dk_day2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>

            <TextView
                android:id="@+id/tv_dk_day3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>

            <TextView
                android:id="@+id/tv_dk_day4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>

            <TextView
                android:id="@+id/tv_dk_day5"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>

            <TextView
                android:id="@+id/tv_dk_day6"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="@dimen/margin_dk_tv"
                android:layout_weight="1"
                android:background="@drawable/tv_dk_futrue_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="12.12"
                android:textColor="@color/text_common_default"
                android:textSize="@dimen/text_size_dk_tv"/>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>