<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context="com.medicine.ssqy.ssqy.ui.activity.SettingActivity">
    <TextView
        android:id="@+id/tv_account_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_content_space"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_information"
        android:paddingLeft="@dimen/left_right_margin"
        android:paddingTop="@dimen/padding_information"
        android:text="账号安全"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_small"/>
    
    <TextView
        android:id="@+id/tv_usercenter_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_content_space"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_information"
        android:paddingLeft="@dimen/left_right_margin"
        android:paddingTop="@dimen/padding_information"
        android:text="个人资料管理"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tv_aboutus_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_content_space"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_information"
        android:paddingLeft="@dimen/left_right_margin"
        android:paddingTop="@dimen/padding_information"
        android:text="关于我们"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_small"/>
    <TextView
        android:id="@+id/tv_exit_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_information"
        android:paddingLeft="@dimen/left_right_margin"
        android:paddingTop="@dimen/padding_information"
        android:text="退出"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_small"/>
    
</LinearLayout>
